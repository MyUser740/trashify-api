{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": [
        "**/*"
    ]
}